{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mvc",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/AspNetCoreSample.Mvc/bin/Debug/net8.0/AspNetCoreSample.Mvc.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/AspNetCoreSample.Mvc",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/AspNetCoreSample.Mvc/Views"
            }
        },
        {
            "name": "Mvc hot-reload",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                ".",
                "--verbose"
            ],
            "cwd": "${workspaceFolder}/src/AspNetCoreSample.Mvc",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/AspNetCoreSample.Mvc/Views"
            }
        },
        {
            "name": "Mvc Watch Attach",
            "type": "dotnetwatchattach",
            "request": "launch",
            "args": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }
            },
            "task": "watchTaskName",
            "program": "AspNetCoreSample.Mvc.exe"
        },
        {
            "name": "WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "webapi-build",
            "program": "${workspaceFolder}/src/AspNetCoreSample.WebApi/bin/Debug/net8.0/AspNetCoreSample.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/AspNetCoreSample.WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
    ],
    "compounds": [
        {
            "name": "Mvc-and-WebApi",
            "configurations": [
                "Mvc",
                "WebApi"
            ]
        },
        {
            "name": "Mvc-hotreload-and-WebApi",
            "configurations": [
                "Mvc Watch Attach",
                "WebApi"
            ]
        }
    ]
}
